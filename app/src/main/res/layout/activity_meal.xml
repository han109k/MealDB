<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/meal_image_height"
            android:id="@+id/recipe_image"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/meal_title_text_size"
            android:textColor="#000"
            android:id="@+id/recipe_title"
            android:padding="7dp"
            android:layout_below="@+id/recipe_image"
            android:text="Some Recipe title"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/recipe_title"
            android:id="@+id/container1"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/meal_category_text_size"
                android:textStyle="bold"
                android:layout_below="@+id/recipe_title"
                android:id="@+id/ingredients_title"
                android:text="Ingredients"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/container1"
            android:id="@+id/ingredients_container">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ingredients_container"
            android:id="@+id/container2"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/meal_category_text_size"
                android:textStyle="bold"
                android:layout_below="@+id/recipe_title"
                android:id="@+id/instructions_title"
                android:text="Instructions"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/container2"
            android:id="@+id/instructions_container">
        </LinearLayout>


    </RelativeLayout>


</ScrollView>